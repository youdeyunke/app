/* components/broker-item/index.wxss */

.outer {
    box-sizing: border-box;
    height: 130rpx;
    width: 100%;
    padding: 0 20rpx;

    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.name {
    /* width: 150rpx; */
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 10rpx 0;
}

.name .fullname {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 8rpx;
}


.image1 {
    width: 24rpx;
    height: 24rpx;
    margin-right: 5rpx;
}

.name-nav .n {
    margin: 0 20rpx 0 6rpx;
}

.name-nav {
    font-size: 24rpx;
    color: #999999;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}


.avatar {
    margin-right: 24rpx;
    position: relative;
}

.avatar .user {
    /* border: 2rpx solid #fff; */
    border-radius: 95rpx;
    width: 95rpx;
    height: 95rpx;
    overflow: hidden;
    background-size: 100% auto;
    background-repeat: no-repeat;
}

.avatar image.badge {
    width: 127rpx;
    height: 34rpx;
    position: absolute;
    left: -13rpx;
    bottom: 0rpx;
}

.actions {
    width: 100rpx;
    display: flex;
}

.actions image {
    width: 80rpx;
    height: 80rpx;
}

.btn {
    width: 100rpx;
    padding: 0 20rpx;
    color: #fff;
    font-size: 24rpx;
    height: 55rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 2rpx 8rpx 20rpx rgba(0, 0, 0, 0.2);
    border-radius: 30rpx;
}

.btn.chat {
    margin-right: 20rpx;
}

.broker-level {
    font-size: 26rpx;
    color: #999999;
}

.broker-level-icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: 37rpx;
}
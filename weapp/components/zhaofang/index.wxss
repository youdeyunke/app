.tags-list {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
}

.tag-item {
    margin-bottom: 10rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    width: calc((100% - 60rpx)/4);
}

.tag-item:nth-child(4n + 4) {
    margin-right: 0;
}

.tags-list-name {
    width: 120rpx;
    font-size: 24rpx;
    text-align: center;
}

.item-header {
    font-size: 36rpx;
    font-weight: bold;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 40rpx;
}

.item-body {
    width: 90%;
    margin: 0 auto;
    margin-bottom: 30rpx;
}

.reWriteBtn {
    text-align: center;
    width: 200rpx;
    height: 50rpx;
    margin: 0 auto;
}
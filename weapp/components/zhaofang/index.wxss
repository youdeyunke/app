    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.slider-1 {
    width: 90%;
    margin: 0 auto;
}

.slider-button-1 {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    background-color: #FFF;

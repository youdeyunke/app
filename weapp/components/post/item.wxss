.red {
    color: red;
}

.post {
    position: relative;
    min-height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin: 0rpx auto;
}


.post.shadow-none {
    box-shadow: none;
}

.post.border-none {
    border: none;
}




.post .icons {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;
    width: 32rpx;
    height: 120rpx;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;

}

.views {
    position: absolute;
    left: 10rpx;
    bottom: 10rpx;
    color: #fff;
    font-size: 24rpx;
    display: flex;
    align-items: center;
}

.views image {
    width: 33rpx;
    height: 33rpx;
    margin-right: 4rpx;
}

.post .icons image {
    width: 32rpx;
    height: 32rpx;
}

.post .meta {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 480rpx;
    margin-left: 20rpx;
    height: 100%;
    font-size: 28rpx;
}

.post .meta .item-title {
    display: flex;
    justify-content: space-between;
}

.post .meta .item-title .left {
    color: #000;
    font-size: 28rpx;
    margin-bottom: 8rpx;
    line-height: 1.2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 333rpx;
}

.post .meta {
    font-size: 28rpx;
}

.post .meta .price-info {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    margin: 6rpx 0 8rpx 0;
    color: #ff0000;
}

.post .meta .price-info .red {
    margin-left: 10rpx;
}

.post .type-info {
    margin-bottom: 8rpx;
    overflow: hidden;
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.post .comment {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #666;
}

.post .comment .num {
    color: #666;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
}

.post .comment .num text {
    margin-right: 8rpx;
}

.post .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.outer {
    display: flex;
    flex-direction: column;

    justify-content: flex-start;
    align-items: center;
}

.outer .broker {

    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background: linear-gradient(230deg, #BBFFCB 0%, #DEFFEB 24%, #92E4D5 100%);
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.16);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 7rpx;
    overflow: hidden;
}

.outer .broker .left .a {
    width: 35rpx;
    height: 35rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    overflow: hidden;
    margin-left: -10rpx;
}

.outer .broker .left .a:first-child {
    margin-left: 20rpx;
}

.outer .broker .right .btn .icon {
    width: 26rpx;
    margin-right:8rpx;
    height: 26rpx;
}

.outer .broker .right{
    display: flex;

}

.outer .broker .right .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 60rpx;
    background: rgba(255, 255, 255, 0.39);
    box-shadow: 0px 2rpx 5rpx rgba(0, 0, 0, 0.16);
    opacity: 1;
    border-radius: 12rpx;
    margin-right:20rpx;
    font-size:23rpx;
    letter-spacing: 2rpx;
}
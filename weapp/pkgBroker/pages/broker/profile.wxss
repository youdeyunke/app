page {
    padding-bottom: 130rpx;
    /* background-color: #FFF; */
}
.bg{
    width: 750rpx;
    height: 580rpx;
    z-index: -1;
    background-color: #FFF;
    position: absolute;
    top: 0;
}
.user-header {
    background-size: 750rpx 278rpx;
    background-repeat: no-repeat;
}

.user-jianjie-content {
    width: 690rpx;
    margin: 0 auto;
    font-size: 30rpx;
    color: #666666;
}

.user-jianjie-tags {
    margin-top: 35rpx;
    /* padding: 30rpx 0; */
    display: flex;
    flex-wrap: wrap;
}

.user-jianjie-tag {
    font-size: 28rpx;
    width: 150rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #3D67C9;
    border: 1rpx solid #3D67C9;
    border-radius: 8rpx;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
}

.user-loupan {
    width: 750rpx;
    margin-top: 24rpx;
    padding: 30rpx;
    background-color: #FFF;
    position: relative;
    padding-top: 100rpx;
    margin-bottom: 150rpx;
}

.user-loupan-title {
    position: absolute;
    top: 50rpx;
    left: 30rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
}

.user-loupan-img {
    width: 690rpx;
    height: 280rpx;
    border-radius: 16rpx;
}

.user-loupan-message {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
}

.user-loupan-message-text {
    font-size: 30rpx;
    color: #666666;
}

.user-loupan-liangdian {
    width: 690rpx;
    height: 56rpx;
    background-color: #FFF1D9;
    margin-top: 30rpx;
    display: flex;
    align-items: center;
}

.user-loupan-liangdian-text {
    font-size: 28rpx;
    font-weight: bold;
    color: #333333;
}

.bottom-btn {
    width: 750rpx;
    height: 130rpx;
    background-color: #FFF;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
    position: fixed;
    z-index:100;
    bottom: 0;
}

.bottom-btn-lianxi {
    text-align: center;
    color: #FFF;
    width: 286rpx;
    height: 100rpx;
    background-color: #1C56DB;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-right: 14rpx;
}

.zixun {
    width: 110rpx;
    height: 110rpx;
    position: fixed;
    right: 22rpx;
    bottom: 160rpx;
    background-color: #1C56DB;
    border-radius: 50%;
}

.zixun image {
    width: 64rpx;
    height: 64rpx;
    margin: 0 23rpx;
    margin-top: 10rpx;
}

.zixun view {
    color: #FFF;
    zoom: 0.75;
    text-align: center;
}

.jiange {
    width: 750rpx;
    height: 20rpx;
    background-color: #F0F0F0;
}

.bottom-btn-fenxiang {
    position: relative;
}

.bottom-btn-fenxiang image {
    width: 52rpx;
    height: 52rpx;
}

.bottom-btn-fenxiang view {
    font-size: 20rpx;
    color: #666666;
    text-align: center;
}

.bottom-btn-fenxiang button {
    position: absolute;
    width: 52rpx;
    height: 62rpx;
    top: 0;
    opacity: 0;
}

.text-1 {
    font-size: 30rpx;
}

.text-2 {
    font-size: 24rpx;
}